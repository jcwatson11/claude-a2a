{
  "name": "claude-a2a",
  "version": "0.1.0",
  "description": "A2A-compatible server wrapping the Claude CLI for agent-to-agent communication",
  "type": "module",
  "files": [
    "dist/",
    "config/example.yaml"
  ],
  "bin": {
    "claude-a2a": "./dist/cli.js",
    "claude-a2a-client": "./dist/client.js"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "dev": "node --import tsx src/cli.ts",
    "dev:client": "node --import tsx src/client/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@a2a-js/sdk": "^0.3.10",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "better-sqlite3": "^12.6.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "uuid": "^11.1.0",
    "yaml": "^2.7.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "esbuild": "^0.25.4",
    "eslint": "^10.0.1",
    "prettier": "^3.5.3",
    "supertest": "^7.2.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  }
}
